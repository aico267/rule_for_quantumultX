# bilibili仅去广告插件(搬运自@iEwha）
#https://github.com/iEwha/Profiles/blob/master/QuantumultX/Rewrite/bilibili.conf

[MITM]
hostname = app.biliintl.com,api.live.bilibili.com,api.vc.bilibili.com,manga.bilibili.com, app.bilibili.com, grpc.biliapi.net

[Script]
# > BiliBili_推荐去广告
http-response ^https?:\/\/app\.bilibili\.com\/x\/v2\/feed\/index script-path=https://raw.githubusercontent.com/ddgksf2013/Cuttlefish/master/Script/bilibili_diy.js, requires-body=true, timeout=10, tag=BiliBili_推荐去广告
# > BiliBili_追番去广告
http-response ^https?:\/\/api\.bilibili\.com\/pgc\/page\/bangumi script-path=https://raw.githubusercontent.com/ddgksf2013/Cuttlefish/master/Script/bilibili_diy.js, requires-body=true, timeout=10, tag=BiliBili_追番去广告
# > BiliBili_直播去广告
http-response ^https?:\/\/api\.live\.bilibili\.com\/xlive\/app-room\/v1\/index\/getInfoByRoom script-path=https://raw.githubusercontent.com/ddgksf2013/Cuttlefish/master/Script/bilibili_diy.js, requires-body=true, timeout=10, tag=BiliBili_直播去广告
# > BiliBili_动态去广告
http-response ^https?:\/\/api\.vc\.bilibili\.com\/dynamic_svr\/v1\/dynamic_svr\/dynamic_(history|new)\? script-path=https://raw.githubusercontent.com/ddgksf2013/Cuttlefish/master/Script/bilibili_diy.js, requires-body=true, timeout=10, tag=BiliBili_动态去广告
# > BiliBili_标签页处理
http-response ^https?:\/\/app\.bilibili\.com\/x\/resource\/show\/tab script-path=https://raw.githubusercontent.com/ddgksf2013/Cuttlefish/master/Script/bilibili_diy.js, requires-body=true, timeout=10, tag=BiliBili_标签页处理
# > BiliBili_我的页面处理
http-response ^https://app\.bilibili\.com/x/v2/account/mine\?access_key script-path=https://raw.githubusercontent.com/iEwha/Profiles/master/Script/bilibili_mine.js, requires-body=true, timeout=10, tag=# > BiliBili_我的页面处理
# > 开屏页广告,推荐页广告,动态(推荐话题和列表广告),视频播放页面(up主推荐广告)
http-response ;^https:\/\/app\.bilibili\.com\/x\/(v2\/(splash\/(list|show)|feed\/index\?)|resource\/show\/tab\/v2) script-path=https://raw.githubusercontent.com/iEwha/Profiles/master/Script/bilibili-json.js, requires-body=true, timeout=10, tag=bili-json
http-response ^https:\/\/app\.bilibili\.com\/bilibili\.app\.(view\.v1\.View\/View|dynamic\.v2\.Dynamic\/DynAll)$ script-path=https://raw.githubusercontent.com/iEwha/Profiles/master/Script/bilibili-proto.js, requires-body=true, timeout=10, tag=bili-proto
